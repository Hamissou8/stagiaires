{% extends 'base.html.twig' %}

{% block title %}Absence{% endblock %}

{% block body %}
    <h1>Absence</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ absence.id }}</td>
            </tr>
            <tr>
                <th>Date debut</th>
                <td>{{ absence.dateDebut ? absence.dateDebut|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date fin</th>
                <td>{{ absence.dateFin ? absence.dateFin|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Justification</th>
                <td>{{ absence.justification }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-primary" href="{{ path('absence_index') }}">Liste d'absences</a>

    <a class="btn btn-lg btn-danger" href="{{ path('absence_edit', {'id': absence.id}) }}">Modifier</a>

    {{ include('absence/_delete_form.html.twig') }}
{% endblock %}
