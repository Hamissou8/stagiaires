{% extends 'base.html.twig' %}

{% block title %}Encadrant{% endblock %}

{% block body %}
    <h1>Encadrant</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ encadrant.id }}</td>
            </tr>
            <tr>
                <th>Cin</th>
                <td>{{ encadrant.cin }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ encadrant.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ encadrant.prenom }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ encadrant.email }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ encadrant.telephone }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-primary" href="{{ path('encadrant_index') }}">Liste d'encadrants</a>

    <a class="btn btn-lg btn-dark" href="{{ path('encadrant_edit', {'id': encadrant.id}) }}">Modifier</a>

    {{ include('encadrant/_delete_form.html.twig') }}
{% endblock %}
